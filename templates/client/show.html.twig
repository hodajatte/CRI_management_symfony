{% extends 'base.html.twig' %}

{% block title %}client{% endblock %}

{% block body %}


    <div class="container"  style="margin-top: 200px; margin-bottom: 100px;">
    
        {% if client %}
            <div class="row">
                <div class="col-3"></div>

                <div class="col-6">
                    <div class="row">
                        <div class="col-8">
                            <h4>nom</h4>
                        </div>
                        <div class="col-4">
                            <p>{{client.nom}}</p>
                        </div>
                        <div class="col-8">
                            <h4>prenom</h4>
                        </div>
                        <div class="col-4">
                            <p>{{client.prenom}}</p>
                        </div>
                        <div class="col-8">
                            <h4>tele</h4>
                        </div>
                        <div class="col-4">
                            <p>{{client.tele}}</p>
                        </div>
                        <div class="col-8">
                            <h4>email</h4>
                        </div>
                        <div class="col-4">
                            <p>{{client.email}}</p>
                        </div>
                        <div class="col-8">
                            <h4>evenement</h4>
                        </div>
                        <div class="col-4">
                            <p>{{client.evenement}}</p>
                        </div>
                        <div class="col-8">
                            <h4>dateVisite</h4>
                        </div>
                        <div class="col-4">
                            <p>{{client.dateVisite|date('Y-m-d')}}</p>
                        </div>
                        <div class="col-8">
                            <h4>formation</h4>
                        </div>
                        <div class="col-4">
                            <p>{{client.formation}}</p>
                        </div>
                        <div class="col-8">
                            <h4>societe</h4>
                        </div>
                        <div class="col-4">
                            <p>{{client.societe.raisonSociale}}</p>
                        </div>
                        <div class="col-8">
                            <h4>createur</h4>
                        </div>
                        <div class="col-4">
                            <p>{{client.createur.nom }}</p>
                        </div>
                    </div>
                </div>

                <div class="col-3"></div>
            </div>
        {% else %}
            <h3 class="text-center" style="margin-bottom: 300px;">Client introuvable !!!!</h3>
        {% endif %}
        
        <a href="{{ path('clients' )}}" class="btn btn-primary">Retour</a>
        <a href="{{ path('client_edit', {'id':client.id} )}}" class="btn btn-warning">Modifier</a>
        <a href="{{ path('client_delete', {'id':client.id} )}}" class="btn btn-danger">Supprimer</a>

    </div>




{% endblock %}
